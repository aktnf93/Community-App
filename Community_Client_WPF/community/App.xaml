<Application x:Class="community.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:community"
             StartupUri="Views/V_MainWindow.xaml"
             ShutdownMode="OnLastWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/R_Colors.xaml"/>
                <ResourceDictionary Source="Resources/R_Images.xaml"/>
                <ResourceDictionary Source="Resources/R_Converters.xaml"/>

                <ResourceDictionary Source="Resources/R_Styles.xaml"/>
                <ResourceDictionary Source="Resources/R_Templates.xaml"/>

                <ResourceDictionary Source="Resources/R_ViewModelTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
