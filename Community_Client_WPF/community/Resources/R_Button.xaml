<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 기본 버튼 -->
    <ControlTemplate TargetType="{x:Type Button}" x:Key="BaseButton">
        <Grid>
            <Border x:Name="Border" CornerRadius="4" Background="#3795EC"/>
            <Image x:Name="Img" Source="{TemplateBinding Tag}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="20" Height="20" Margin="8,0,0,0"/>
            <ContentPresenter x:Name="Button_Text" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="{StaticResource Color_White}"/>
        </Grid>

        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Border" Property="Background" Value="{StaticResource Color_Gray}"/>
            </Trigger>
            <Trigger Property="Tag" Value="{x:Null}">
                <Setter TargetName="Img" Property="Visibility" Value="Collapsed"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- 아이콘 버튼 -->
    <ControlTemplate TargetType="{x:Type Button}" x:Key="IconButton">
        <Border x:Name="Border" Background="{StaticResource Color_Transparent}">
            <Image Source="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Border" Property="Background" Value="{StaticResource Color_ThinGray}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{StaticResource BaseButton}"/>
    </Style>
    
</ResourceDictionary>