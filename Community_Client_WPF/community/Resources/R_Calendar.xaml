 <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:u="clr-namespace:community.View_Controls">


     <!-- 일 버튼 스타일 -->
    <Style TargetType="{x:Type CalendarDayButton}" x:Key="DayButtonStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarDayButton}">
                    <Border x:Name="Root" CornerRadius="8" Height="40" Padding="6" Margin="2" Background="Transparent" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter TextBlock.FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- 마우스 오버 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="#F3F4F6"/>
                        </Trigger>
                        <!-- 선택된 날짜 -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="#3B82F6"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>
                        <!-- 오늘 날짜 -->
                        <Trigger Property="IsToday" Value="True">
                            <Setter TargetName="Root" Property="BorderBrush" Value="#3B82F6"/>
                            <Setter TargetName="Root" Property="BorderThickness" Value="2"/>
                        </Trigger>
                        <!-- 비활성 날짜 -->
                        <Trigger Property="IsInactive" Value="True">
                            <Setter Property="Foreground" Value="#999"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 월/연도 버튼 스타일 -->
    <Style x:Key="HeaderButtonStyle" TargetType="{x:Type CalendarButton}">
        <Setter Property="Foreground" Value="#1673D3"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarButton}">
                    <Border x:Name="Root" Background="Transparent" 
                            Margin="0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="#F3F4F6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

     <!-- 캘린더 내용물 -->
    <Style x:Key="CalendarItemStyle" TargetType="{x:Type CalendarItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarItem}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" Tag="헤더"/>
                            <RowDefinition Height="Auto" Tag="요일"/>
                            <RowDefinition Height="*" Tag="날짜"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="6" Tag="헤더">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40" Tag="이전 버튼"/>
                                <ColumnDefinition Width="*"  Tag="월/연도 표시 + 모드 전환"/>
                                <ColumnDefinition Width="40" Tag="다음 버튼"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="PART_PreviousButton" Grid.Column="0" 
                                                Content="〈"
                                                FontSize="20" FontWeight="Bold" Foreground="#1673D3" Background="Transparent" BorderThickness="0" 
                                                Style="{x:Null}"/>

                            <Button x:Name="PART_HeaderButton" Grid.Column="1" 
                                                Content="{Binding DisplayDate, RelativeSource={RelativeSource TemplatedParent}, StringFormat={}{0:yyyy MMMM}}"
                                                FontSize="20" FontWeight="Bold" Foreground="#1673D3" Background="Transparent" BorderThickness="0" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Style="{x:Null}"/>

                            <Button x:Name="PART_NextButton" Grid.Column="2" 
                                                Content="〉"
                                                FontSize="20" FontWeight="Bold" Foreground="#1673D3" Background="Transparent" BorderThickness="0" 
                                                Style="{x:Null}"/>
                        </Grid>

                        <!-- 요일 헤더 -->
                        <Grid x:Name="PART_DaysOfWeek" Grid.Row="1" Margin="0,20,0,20" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="일" Grid.Column="0" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#E74C3C"/>
                            <TextBlock Text="월" Grid.Column="1" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="화" Grid.Column="2" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="수" Grid.Column="3" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="목" Grid.Column="4" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="금" Grid.Column="5" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="토" Grid.Column="6" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1673D3"/>
                        </Grid>

                        <!-- 컨텐츠: Month / Year / Decade -->
                        <Grid Grid.Row="2" x:Name="PART_MonthView" Visibility="Visible">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition Height="0"/>
                            </Grid.RowDefinitions>
                        </Grid>

                        <Grid Grid.Row="2" x:Name="PART_YearView" Visibility="Hidden">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                        </Grid>

                        <Grid Grid.Row="2" x:Name="PART_DecadeView" Visibility="Hidden">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                        </Grid>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!--<Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Visibility" TargetName="PART_DisabledVisual" Value="Visible" />
                        </Trigger>-->

                        <DataTrigger Binding="{Binding DisplayMode,  RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Calendar}}}" Value="Year">
                            <Setter Property="Visibility" TargetName="PART_DaysOfWeek" Value="Hidden" />
                            <Setter Property="Visibility" TargetName="PART_MonthView" Value="Hidden" />
                            <Setter Property="Visibility" TargetName="PART_YearView" Value="Visible" />
                        </DataTrigger>

                        <DataTrigger Binding="{Binding DisplayMode, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Calendar}}}" Value="Decade">
                            <Setter Property="Visibility" TargetName="PART_DaysOfWeek" Value="Hidden" />
                            <Setter Property="Visibility" TargetName="PART_MonthView" Value="Hidden" />
                            <Setter Property="Visibility" TargetName="PART_YearView" Value="Visible" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 캘린더 스타일 -->
    <Style x:Key="CalendarStyle" TargetType="{x:Type Calendar}">
        <Setter Property="CalendarButtonStyle" Value="{StaticResource HeaderButtonStyle}"/>
        <Setter Property="CalendarDayButtonStyle" Value="{StaticResource DayButtonStyle}"/>
        <Setter Property="SelectionMode" Value="SingleDate"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Calendar}">
                    <Border CornerRadius="8" Background="White" BorderBrush="#DDD" BorderThickness="0">
                        <CalendarItem x:Name="PART_CalendarItem" Background="Transparent" Style="{StaticResource CalendarItemStyle}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
     
     
     <!-- - - -->
     
     



</ResourceDictionary>