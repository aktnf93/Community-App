<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Calendar" x:Key="Cal">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Calendar">
                    <Border BorderBrush="#DDD" BorderThickness="0" CornerRadius="8" Background="White">
                        <Grid>
                            <!-- 날짜 영역 -->
                            <CalendarItem x:Name="PART_CalendarItem"
                                          Grid.Row="1"
                                          BorderThickness="0"
                                          Background="Transparent"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="CalendarItem" BasedOn="{StaticResource {x:Type CalendarItem}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CalendarItem">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- 헤더 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 요일 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 날짜 -->
                        </Grid.RowDefinitions>

                        <!-- 월/연도 헤더 -->
                        <Button x:Name="PART_HeaderButton"
                            Grid.Row="0"
                            FontSize="20"
                            FontWeight="Bold"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Content="{Binding DisplayDate, RelativeSource={RelativeSource TemplatedParent}, StringFormat='{}{0:yyyy MMMM}'}"
                            Background="Transparent"
                            Foreground="#1673D3"
                            BorderThickness="0" Style="{x:Null}"/>



                        <!-- 요일 헤더 -->
                        <Grid Grid.Row="1" x:Name="PART_DaysOfWeek" Margin="0,28,0,20" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="일" Grid.Column="0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#E74C3C"/>
                            <TextBlock Text="월" Grid.Column="1" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="화" Grid.Column="2" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="수" Grid.Column="3" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="목" Grid.Column="4" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="금" Grid.Column="5" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="토" Grid.Column="6" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1673D3"/>
                        </Grid>

                        <!-- 날짜 영역 -->
                        <Grid Grid.Row="2" x:Name="PART_MonthView">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <Style TargetType="CalendarButton" x:Key="Btn">

        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#555"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    
    <Style TargetType="CalendarDayButton" >
        <Setter Property="Width" Value="60"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#333"/>
        <Setter Property="Padding" Value="6"/>
    </Style>

    <!-- 날짜 버튼 템플릿 -->
    <Style TargetType="CalendarDayButton" x:Key="Day">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CalendarDayButton">
                    <Border x:Name="Root"
                            CornerRadius="8"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="6"
                            Height="40"
                            Margin="2">
                        <ContentPresenter TextBlock.FontSize="18" HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- 마우스 오버 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="#F3F4F6"/>
                        </Trigger>
                        <!-- 선택된 날짜 -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="#3B82F6"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>
                        <!-- 오늘 날짜 -->
                        <Trigger Property="IsToday" Value="True">
                            <Setter TargetName="Root" Property="BorderBrush" Value="#3B82F6"/>
                            <Setter TargetName="Root" Property="BorderThickness" Value="2"/>
                        </Trigger>
                        <!-- 비활성 날짜 -->
                        <Trigger Property="IsInactive" Value="True">
                            <Setter Property="Foreground" Value="#999"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>