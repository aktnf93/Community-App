<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate TargetType="CheckBox" x:Key="BaseCheckBox">
        <Border x:Name="Bor" Background="Transparent" BorderThickness="0.5" Padding="4" CornerRadius="4">
            <StackPanel Orientation="Horizontal" Width="80">
                <!-- 박스 -->
                <Border x:Name="Box" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,5,0" Background="LightGray">
                    <!-- 체크 표시 -->
                    <Viewbox Stretch="Uniform">
                        <Path x:Name="CheckMark" Data="M 2 10 L 8 16 L 18 4" Stroke="White" StrokeThickness="3" Visibility="Collapsed" Margin="1,0,2,4"/>
                    </Viewbox>
                </Border>

                <!-- 텍스트 -->
                <ContentPresenter VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 상태 트리거 -->
        <ControlTemplate.Triggers>
            <!-- 체크 되었을 때 -->
            <Trigger Property="IsChecked" Value="True">
                <Setter TargetName="Box" Property="Background" Value="DodgerBlue"/>
                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
            </Trigger>

            <!-- 마우스 오버 시 강조 -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Bor" Property="BorderBrush" Value="DarkGray"/>
            </Trigger>

            <!-- 비활성화 상태 -->
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="Box" Property="Background" Value="LightGray"/>
                <Setter TargetName="CheckMark" Property="Stroke" Value="Gray"/>
                <Setter Property="Foreground" Value="Gray"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="Template" Value="{StaticResource BaseCheckBox}"/>
    </Style>
</ResourceDictionary>