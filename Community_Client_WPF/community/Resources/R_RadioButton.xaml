<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 메인 메뉴 버튼 -->
    <ControlTemplate TargetType="{x:Type RadioButton}" x:Key="MenuButton">
        <Border x:Name="Border" Height="90"  Background="{StaticResource Color_Transparent}"
                    CornerRadius="6" Margin="2,0,2,0">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="8">
                <Image Source="{TemplateBinding Tag}" Width="34" Height="34" Margin="0,0,0,8"/>
                <ContentPresenter x:Name="ButtonText" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                  TextBlock.FontSize="14" TextBlock.FontFamily="고도 M" TextBlock.Foreground="{StaticResource Color_White}"/>
            </StackPanel>
        </Border>

        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter TargetName="Border" Property="Background" Value="{StaticResource Color_ThinGray}"/>
                <Setter TargetName="ButtonText" Property="TextBlock.Foreground" Value="{StaticResource Color_White}"/>
            </Trigger>

            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Border" Property="Background" Value="#2189EA"/>
                <Setter TargetName="ButtonText" Property="TextBlock.Foreground" Value="{StaticResource Color_White}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- 서브 메뉴 버튼 -->
    <ControlTemplate TargetType="{x:Type RadioButton}" x:Key="SubMenuButton">
        <Border x:Name="Bor" Background="Transparent" Width="200">
            <ContentPresenter Content="{TemplateBinding Content}" 
                              HorizontalAlignment="Center" VerticalAlignment="Center" 
                              TextBlock.Foreground="{StaticResource Color_White}"
                              TextBlock.FontSize="15">
            </ContentPresenter>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter TargetName="Bor" Property="Background" Value="#1673D3"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Bor" Property="Background" Value="#4B93DD"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    
</ResourceDictionary>