<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:community.Views">

    <Style TargetType="{x:Type TreeView}" x:Key="Tree_PostGroup">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <HierarchicalDataTemplate ItemsSource="{Binding SubTree}">
                    <TextBlock Text="{Binding Name}"/>
                </HierarchicalDataTemplate>
            </Setter.Value>
        </Setter>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TreeView}">
                    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                        <ItemsPresenter/>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TreeViewItem}">
                                <StackPanel Orientation="Vertical">
                                    <Border x:Name="bor" Height="30" Background="{StaticResource Color_White}" BorderBrush="Transparent" BorderThickness="1" CornerRadius="8">
                                        <Grid x:Name="Parent">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="20"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock        Grid.Column="0" x:Name="TxtTop"   Text="┗" VerticalAlignment="Center" Visibility="Collapsed"/>
                                            <Image            Grid.Column="1" x:Name="Image"    Source="{StaticResource Img_Post_w}" Width="20" Height="20"/>
                                            <ContentPresenter Grid.Column="2" x:Name="Btn_Text" ContentSource="Header" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            <Image            Grid.Column="3" x:Name="Expander" Source="{StaticResource Img_Post_ArrowDown}" 
                                                                                                Width="18" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        </Grid>
                                    </Border>
                                    <ItemsPresenter x:Name="Child" Margin="10,0,0,0" Visibility="Collapsed"/>
                                </StackPanel>

                                <ControlTemplate.Triggers>
                                    <!-- 자식 요소가 없음 -->
                                    <!--<DataTrigger Binding="{Binding SubTree.Count}" Value="0">
                                        <Setter TargetName="Image" Property="Source" Value="{StaticResource Img_FolderClose}"/>
                                        <Setter TargetName="Expander" Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>-->

                                    <!-- 전체 카테고리 -->
                                    <DataTrigger Binding="{Binding Parent_Id}" Value="{x:Null}">
                                        <Setter TargetName="Image" Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>

                                    <!-- 상위 카테고리 -->
                                    <DataTrigger Binding="{Binding Parent_Id}" Value="0">
                                        <Setter TargetName="Image" Property="Source" Value="{StaticResource Img_FolderClose}"/>
                                    </DataTrigger>

                                    <!-- 자식 요소를 펼치기 -->
                                    <Trigger Property="IsExpanded" Value="True">
                                        <Setter TargetName="Expander" Property="Source" Value="{StaticResource Img_Post_ArrowUp}"/>
                                        <Setter TargetName="Child" Property="Visibility" Value="Visible"/>
                                    </Trigger>

                                    <!-- 선택 -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="bor" Property="Background" Value="{StaticResource Color_LightBlue}"/>
                                        <Setter TargetName="Btn_Text"  Property="TextBlock.Foreground" Value="{StaticResource Color_White}"/>
                                        <Setter TargetName="Btn_Text"  Property="TextBlock.FontWeight" Value="Bold"/>
                                    </Trigger>

                                    <!-- 마우스 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bor" Property="BorderBrush" Value="{StaticResource Color_Blue}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type TreeView}" x:Key="Tree_ChatGroup">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <HierarchicalDataTemplate ItemsSource="{Binding Members}">
                    <TextBlock Text="{Binding Name}"/>
                </HierarchicalDataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TreeView}">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <ItemsPresenter/>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TreeViewItem}">
                                <StackPanel Orientation="Vertical">
                                    <Border x:Name="bor" Height="50" Background="Transparent">
                                        <Grid x:Name="Parent">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="20"/>
                                            </Grid.ColumnDefinitions>

                                            <!--<Image Grid.Column="0" x:Name="Image" Source="{Binding Image_Path}" Width="20" Height="20"/>-->

                                            <ContentPresenter Grid.Column="1" x:Name="Btn_Text" ContentSource="Header" HorizontalAlignment="Left" VerticalAlignment="Center"
                                                          TextBlock.Foreground="{StaticResource Color_Black}"/>

                                            <Image Grid.Column="2" x:Name="Expander" Source="{StaticResource Img_Post_ArrowDown}" Visibility="Collapsed" 
                                                           Width="18" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                            <Button Grid.Column="0" Grid.ColumnSpan="3" Content="접속" Click="{local:MethodBinding OnChatRoomEnter}" 
                                                                Width="60" Height="30"
                                                                HorizontalAlignment="Right" Margin="0,0,40,0"/>
                                        </Grid>
                                    </Border>
                                    <ItemsPresenter x:Name="Child" Margin="10,0,0,0" Visibility="Collapsed"/>
                                </StackPanel>

                                <ControlTemplate.Triggers>

                                    <!-- 자식 요소가 있으면 하위식별 표시 -->
                                    <Trigger Property="HasItems" Value="True">
                                        <Setter TargetName="Expander" Property="Visibility" Value="Visible"/>
                                    </Trigger>

                                    <!-- 자식 요소를 펼치기 -->
                                    <Trigger Property="IsExpanded" Value="True">
                                        <Setter TargetName="Expander" Property="Source" Value="{StaticResource Img_Post_ArrowUp}"/>
                                        <Setter TargetName="Child" Property="Visibility" Value="Visible"/>
                                    </Trigger>

                                    <!-- 선택 -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Parent" Property="Background" Value="{StaticResource Color_ThinGray}"/>
                                        <Setter TargetName="Btn_Text"  Property="TextBlock.Foreground" Value="{StaticResource Color_Yellow}"/>
                                        <Setter TargetName="Btn_Text"  Property="TextBlock.FontWeight" Value="Bold"/>
                                    </Trigger>

                                    <!-- 마우스 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Parent" Property="Background" Value="{StaticResource Color_Gray}"/>
                                        <Setter TargetName="Btn_Text"  Property="TextBlock.Foreground" Value="{StaticResource Color_White}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type TreeView}" x:Key="Tree_EmployeesGroup">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <HierarchicalDataTemplate ItemsSource="{Binding SubTree}">
                    <TextBlock>
                            <Run>
                                <Run.Style>
                                    <Style TargetType="{x:Type Run}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Depth}" Value="1">
                                                <Setter Property="Text" Value="[회사]"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Depth}" Value="2">
                                                <Setter Property="Text" Value="[부서]"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Depth}" Value="3">
                                                <Setter Property="Text" Value="[팀]"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Run.Style>
                            </Run>
                            <Run Text="{Binding Name}"/>
                    </TextBlock>
                </HierarchicalDataTemplate>
            </Setter.Value>
        </Setter>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TreeView}">
                    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                        <ItemsPresenter/>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded}" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TreeViewItem}">
                                <StackPanel Orientation="Vertical">
                                    <Border x:Name="bor" Height="30" Background="{StaticResource Color_White}" BorderBrush="Transparent" BorderThickness="1" CornerRadius="8">
                                        <Grid x:Name="Parent">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="20"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock        Grid.Column="0" x:Name="TxtTop"   Text="┗" VerticalAlignment="Center" Visibility="Collapsed"/>
                                            <Image            Grid.Column="1" x:Name="Image"    Source="{StaticResource Img_FolderCloseDoc}" Width="20" Height="20"/>
                                            <ContentPresenter Grid.Column="2" x:Name="Btn_Text" ContentSource="Header" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            <Image            Grid.Column="3" x:Name="Expander" Source="{StaticResource Img_Post_ArrowDown}" 
                                                                                                Width="18" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        </Grid>
                                    </Border>

                                    <ItemsPresenter x:Name="Child" Margin="10,0,0,0" Visibility="Collapsed"/>
                                </StackPanel>

                                <ControlTemplate.Triggers>
                                    <!-- 자식 요소가 없음 -->
                                    <!--<DataTrigger Binding="{Binding SubTree.Count}" Value="0">
                                        <Setter TargetName="Image" Property="Source" Value="{StaticResource Img_FolderClose}"/>
                                        <Setter TargetName="Expander" Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>-->

                                    <!-- 전체 -->
                                    <DataTrigger Binding="{Binding Depth}" Value="0">
                                        <Setter TargetName="Image" Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>

                                    <!-- 회사 -->
                                    <DataTrigger Binding="{Binding Depth}" Value="1">
                                        <Setter TargetName="Image" Property="Source" Value="{StaticResource Img_Building}"/>
                                    </DataTrigger>

                                    <!-- 부서 -->
                                    <DataTrigger Binding="{Binding Depth}" Value="2">
                                        <Setter TargetName="Image" Property="Source" Value="{StaticResource Img_FolderClose}"/>
                                        <Setter TargetName="Image" Property="Width" Value="18"/>
                                        <Setter TargetName="Image" Property="Height" Value="18"/>
                                        <Setter TargetName="TxtTop" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>

                                    <!-- 팀 -->
                                    <DataTrigger Binding="{Binding Depth}" Value="3">
                                        <Setter TargetName="Image" Property="Source" Value="{StaticResource Img_Customer_w}"/>
                                        <Setter TargetName="Image" Property="Width" Value="16"/>
                                        <Setter TargetName="Image" Property="Height" Value="16"/>
                                        <Setter TargetName="TxtTop" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>

                                    <!-- 자식 요소를 펼치기 -->
                                    <Trigger Property="IsExpanded" Value="True">
                                        <Setter TargetName="Expander" Property="Source" Value="{StaticResource Img_Post_ArrowUp}"/>
                                        <Setter TargetName="Child" Property="Visibility" Value="Visible"/>
                                    </Trigger>

                                    <!-- 선택 -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="bor" Property="Background" Value="{StaticResource Color_LightBlue}"/>
                                        <Setter TargetName="Btn_Text"  Property="TextBlock.Foreground" Value="{StaticResource Color_White}"/>
                                        <Setter TargetName="Btn_Text"  Property="TextBlock.FontWeight" Value="Bold"/>
                                    </Trigger>

                                    <!-- 마우스 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bor" Property="BorderBrush" Value="{StaticResource Color_Blue}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
    
    
</ResourceDictionary>