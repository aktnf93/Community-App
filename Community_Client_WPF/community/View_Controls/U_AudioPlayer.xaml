<UserControl x:Class="community.View_Controls.U_AudioPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:community.View_Controls"
             mc:Ignorable="d" 
             Focusable="False">

    <Border Focusable="False" BorderBrush="Gray" BorderThickness="1" CornerRadius="2">
        <Grid Focusable="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="Black">
                <MediaElement x:Name="media" LoadedBehavior="Manual" UnloadedBehavior="Stop" Focusable="False"
                              MaxHeight="30"/>
            </Border>
            
            <StackPanel Grid.Row="1" Orientation="Horizontal" Background="Gray">

                <Button Content="▶" Click="Play_Click" 
                        Focusable="True" Width="44" Height="22" VerticalAlignment="Center"
                        Template="{StaticResource ButtonTemplate}"/>
                
                <Button Content="| |" Click="Pause_Click" 
                        Focusable="True" Width="44" Height="22" VerticalAlignment="Center"
                        Template="{StaticResource ButtonTemplate}"/>

                <Button Content="■" Click="Stop_Click" 
                        Focusable="True" Width="44" Height="22" VerticalAlignment="Center"
                        Template="{StaticResource ButtonTemplate}"/>

                <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="2" Background="White" Margin="0,0,10,0">
                    <Slider x:Name="progress" Width="200" Minimum="0" Maximum="100" 
                            ValueChanged="Progress_ValueChanged" Focusable="True" VerticalAlignment="Center"
                            Margin="10,0,10,0"/>
                </Border>
                
                <TextBlock x:Name="media_min" MinWidth="38" VerticalAlignment="Center"/>
                <TextBlock Text=" / " VerticalAlignment="Center"/>
                <TextBlock x:Name="media_max" MinWidth="38" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
