<UserControl x:Class="community.View_Controls.U_ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:community.View_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    
    <Grid x:Name="Root" Background="Transparent" CacheMode="BitmapCache">
        <!-- 회색 배경 -->
        <Border Background="#DDD" 
                CornerRadius="2" Height="6"/>

        <!-- 진행된 영역 -->
        <Rectangle x:Name="TrackFill" Fill="#4CAF50" HorizontalAlignment="Left"
                   RadiusX="2" RadiusY="2" Width="0" Height="6"/>

        <!-- 동그라미 Thumb -->
        <Ellipse x:Name="Thumb" 
                 Width="18" Height="18" Fill="White" Stroke="#4CAF50" StrokeThickness="1" 
                 HorizontalAlignment="Left" Margin="-8,0,0,0" Visibility="Collapsed"/>
    </Grid>
</UserControl>
