<UserControl x:Class="community.View_Controls.U_RadialProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:community.View_Controls"
             mc:Ignorable="d" 
             Width="160" Height="160">
    <Grid>
        <!-- 배경 원 (트랙) 기본색 #E5E7EB -->
        <Ellipse x:Name="Track"
                 Stroke="{Binding ProgressBackground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 Fill="Transparent"/>

        <!-- 진행 원호 (아크) -->
        <Path x:Name="ProgressArc"
              Stroke="{Binding ProgressBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
              StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"
              StrokeStartLineCap="Flat"
              StrokeEndLineCap="Flat"
              Fill="Transparent"/>

        <!-- 중앙 텍스트 (선택) -->
        <TextBlock HorizontalAlignment="Center" Visibility="Collapsed"
                   VerticalAlignment="Center"
                   FontSize="20" FontWeight="Bold"
                   Foreground="#374151"
                   Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0}%}"/>
    </Grid>

</UserControl>
