<UserControl x:Class="community.View_Controls.U_TripleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:community.View_Controls"
             mc:Ignorable="d" 
             Width="180" Height="50">
    <Grid x:Name="LayoutRoot" Background="Transparent" MouseLeftButtonUp="LayoutRoot_MouseLeftButtonUp">
        <!-- 배경 -->
        <Border x:Name="SwitchBackground" CornerRadius="25" Background="LightGray" />

        <!-- 상태 텍스트 -->
        <TextBlock x:Name="StateText" Text="1번" Foreground="White" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>

        <!-- 이동하는 원 -->
        <Ellipse x:Name="SwitchThumb" Width="48" Height="48" Fill="White" Margin="1"
                 HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TranslateTransform x:Name="ThumbTransform" />
            </Ellipse.RenderTransform>
        </Ellipse>
    </Grid>
</UserControl>
