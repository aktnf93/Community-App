<UserControl x:Class="community.View_Controls.U_TripleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:community.View_Controls"
             mc:Ignorable="d" 
             Width="160" Height="30">
    
    <Grid x:Name="LayoutRoot" Background="Transparent" MouseLeftButtonUp="LayoutRoot_MouseLeftButtonUp">
        <!-- 배경 -->
        <Border x:Name="SwitchBackground" CornerRadius="14" Background="LightGray" />

        <!-- 상태 텍스트 -->
        <TextBlock x:Name="StateText" Text="직원목록" Foreground="White" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>

        <!-- 이동하는 원 -->
        <Border x:Name="SwitchThumb" Width="28" Height="28" Background="White" Margin="1"
                CornerRadius="16"
                 HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TranslateTransform x:Name="ThumbTransform" />
            </Border.RenderTransform>
        </Border>
    </Grid>
</UserControl>
