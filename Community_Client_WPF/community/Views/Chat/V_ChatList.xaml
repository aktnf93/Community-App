<UserControl x:Class="community.Views.V_ChatList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:community.Views"
             xmlns:m="clr-namespace:community.Models"
             mc:Ignorable="d" 
             Width="1810" Height="950"
             Background="{StaticResource Color_WhiteGray}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"  Tag="여백"/>
            <ColumnDefinition Width="390" Tag="그룹"/>
            <ColumnDefinition Width="30"  Tag="여백"/>
            <ColumnDefinition Width="*"   Tag="리스트"/>
            <ColumnDefinition Width="30"  Tag="여백"/>
            <ColumnDefinition Width="440" Tag="디테일"/>
            <ColumnDefinition Width="30"  Tag="여백"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"  Tag="타이틀"/>
            <RowDefinition Height="10"  Tag="여백"/>
            <RowDefinition Height="100" Tag="컨트롤"/>
            <RowDefinition Height="50"  Tag="여백"/>
            <RowDefinition Height="*"   Tag="리스트"/>
            <RowDefinition Height="30"  Tag="여백"/>
        </Grid.RowDefinitions>

        <!-- 타이틀 -->
        <Grid Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="0" TextBlock.FontFamily="고도 M">
            <TextBlock Text="채팅방" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        </Grid>

        <!-- 중간 컨트롤 -->
        <Border Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="2" Style="{StaticResource BaseCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="검색옵션" FontSize="13" FontWeight="Bold" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <CheckBox Content="전체" IsChecked="True" Margin="20,0,0,0"/>
                </StackPanel>

                <Line Grid.Row="0" Stroke="{StaticResource Color_Gray}" StrokeThickness="0.5" X1="0" X2="2000"
                      HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="방 생성" FontSize="13" FontWeight="Bold" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,20,0"/>

                    <StackPanel Orientation="Horizontal" Width="300" VerticalAlignment="Center">
                        <TextBox Width="200" Height="30" Template="{StaticResource Icon_TextBox}" Tag="{StaticResource Img_Edit}" ToolTip="이름" Text="{Binding ChatRoomSelected.Name}"/>
                        <Button Width="30" Height="30" Content="➕️" Margin="6,0,0,0" ToolTip="추가" Click="{local:MethodBinding ChatRoomAdd}"/>
                        <Button Width="30" Height="30" Content="✏️"  Margin="2,0,0,0" ToolTip="수정" Click="{local:MethodBinding ChatRoomEdit}"/>
                        <Button Width="30" Height="30" Content="➖️" Margin="2,0,0,0" ToolTip="삭제" Click="{local:MethodBinding ChatRoomDelete}"/>
                        <TextBox Width="200" Height="30" Template="{StaticResource Icon_TextBox}" Tag="{StaticResource Img_Chat}" HorizontalAlignment="Left" ToolTip="설명" Text="{Binding ChatRoomSelected.Description}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 그룹 리스트 -->
        <Border Grid.Column="1" Grid.Row="4" Style="{StaticResource BaseCard}">
            <TreeView Grid.Row="1" Style="{StaticResource Tree_ChatGroup}" Margin="10"
                      ItemsSource="{Binding ChatRoomList}">
            </TreeView>
        </Border>

        <Border Grid.Column="3" Grid.Row="2" Grid.RowSpan="3" Style="{StaticResource BaseCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="180"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,0.5">
                    <TextBlock Text="# 연간 회의실" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"
                               FontSize="18" FontWeight="Bold"/>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" Margin="0.5" Background="#F8F9FD">
                    <ItemsControl Margin="0,20,0,20" ItemsSource="{Binding CurrentChatRoom.Messages}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>

                                <Grid Margin="10,0,10,30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 채팅 메시지의 사용자 프로필 사진 -->
                                    <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" 
                                            CornerRadius="30" Width="40" Height="40" VerticalAlignment="Top" Margin="0,0,10,0">
                                        <Border.Background>
                                            <SolidColorBrush Color="LightBlue"/>
                                        </Border.Background>
                                    </Border>
                                    
                                    <!-- 채팅 메시지의 사용자 이름 -->
                                    <TextBlock Grid.Column="1" Grid.Row="0" 
                                               Text="{Binding Employee_Name}" FontSize="15"/>
                                    
                                    <!-- 채팅 메시지 발생 시각 (DB 저장 기준) -->
                                    <TextBlock Grid.Column="2" Grid.Row="0" 
                                               Text="{Binding Created_At, StringFormat={}{0:tt HH:mm}}" 
                                               HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="4,0,0,0" Foreground="Gray"/>
                                    
                                    <!-- 채팅 메시지 내용 -->
                                    <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"
                                            Background="LightGray" CornerRadius="8" Padding="10" Margin="0,4,0,0">
                                        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="14"/>
                                    </Border>
                                    
                                    
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Grid Grid.Row="2" Background="#F8F9FD">
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Margin="10" Background="White">
                        <Grid>
                            <TextBox TextWrapping="Wrap" AcceptsReturn="True" 
                                 Text="{Binding TxtChatRoomMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=메시지, FallbackValue=메시지}" 
                                 Style="{x:Null}" 
                                 BorderBrush="Transparent"
                                 Margin="10,10,10,50"/>

                            <Button Content="보내기" Click="{local:MethodBinding BtnChatRoomMessageSend}" 
                                HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Height="30" Margin="0,0,10,10"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Column="4" Grid.Row="2" 
                Grid.ColumnSpan="2" Grid.RowSpan="3" Style="{StaticResource BaseCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <ItemsControl Grid.Row="1" ItemsSource="{Binding CurrentChatRoom.Members}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="0.5" CornerRadius="8" Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 채팅방의 사용자 프로필 사진 -->
                                    <Border Grid.Column="0" CornerRadius="30" Width="40" Height="40" VerticalAlignment="Center" Margin="8">
                                        <Border.Background>
                                            <SolidColorBrush Color="LightBlue"/>
                                        </Border.Background>
                                    </Border>

                                    <!-- 채팅방의 사용자 이름 -->
                                    <TextBlock Grid.Column="1" Text="{Binding Employee_Name}" FontSize="15" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>
