<UserControl x:Class="community.Views.V_Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:community.Views"
             xmlns:vm="clr-namespace:community.ViewModels"
             xmlns:m="clr-namespace:community.Models"
             mc:Ignorable="d" 
             Width="1810" Height="1000" d:DesignWidth="1810" d:DesignHeight="1000"
             Loaded="{local:MethodBinding Loaded}" Background="{StaticResource Color_WhiteGray}">
    <!--<UserControl.DataContext>
        <vm:VM_Chat/>
    </UserControl.DataContext>-->

    <Grid Margin="20,20,20,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"  Tag="배너"/>
            <RowDefinition Height="20"  Tag="여백"/>
            <RowDefinition Height="*"   Tag="리스트"/>
        </Grid.RowDefinitions>

        <!-- 배너 -->
        <Control Grid.Row="0" Template="{StaticResource BannerCard}" DataContext="{Binding BannerCard}"/>

        <!-- 리스트 목록  -->
        <Grid Grid.Row="2" Background="{StaticResource Color_White}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 채팅방 목록 -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="0.5">
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                
                    <WrapPanel Grid.Row="0" Orientation="Horizontal" Width="300" VerticalAlignment="Center">
                        <TextBox Width="200" Height="30" Template="{StaticResource Icon_TextBox}" Tag="{StaticResource Img_Edit}" ToolTip="이름" Text="{Binding ChatRoomSelected.Name}"/>
                        <Button Width="30" Height="30" Content="➕️" Margin="6,0,0,0" ToolTip="추가" Click="{local:MethodBinding ChatRoomAdd}"/>
                        <Button Width="30" Height="30" Content="✏️"  Margin="2,0,0,0" ToolTip="수정" Click="{local:MethodBinding ChatRoomEdit}"/>
                        <Button Width="30" Height="30" Content="➖️" Margin="2,0,0,0" ToolTip="삭제" Click="{local:MethodBinding ChatRoomDelete}"/>
                        <TextBox Width="200" Height="30" Template="{StaticResource Icon_TextBox}" Tag="{StaticResource Img_Chat}" HorizontalAlignment="Left" ToolTip="설명" Text="{Binding ChatRoomSelected.Description}"/>
                    </WrapPanel>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding ChatRoomList}" Visibility="Collapsed">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <TextBlock Text="{Binding Name}"/>

                                            <Button Content="접속" Click="{local:MethodBinding OnChatRoomEnter}" 
                                                    Width="60" Height="30" HorizontalAlignment="Right" Margin="0,0,40,0"/>
                                        </Grid>

                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Members}" Background="Purple" Height="100">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <TextBlock Text="{Binding Name}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    

                    <TreeView Grid.Row="1" ItemsSource="{Binding ChatRoomList}" >
                        <TreeView.Template>
                            <ControlTemplate TargetType="{x:Type TreeView}">
                                <Border BorderBrush="Gray" BorderThickness="0,0.5,0,0">
                                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </ControlTemplate>
                        </TreeView.Template>
                        
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Members}">
                                <TextBlock Text="{Binding Name}"/>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>

                        <TreeView.ItemContainerStyle>
                            <Style TargetType="{x:Type TreeViewItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TreeViewItem}">
                                            <StackPanel Orientation="Vertical">
                                                <Border x:Name="bor" Height="50" Cursor="Hand" Background="Transparent">
                                                    <Grid x:Name="Parent">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="20"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Image Grid.Column="0" x:Name="Image" Source="{Binding Image_Path}" Width="20" Height="20"/>
                                                    
                                                        <ContentPresenter Grid.Column="1" x:Name="Btn_Text" ContentSource="Header" HorizontalAlignment="Left" VerticalAlignment="Center"
                                                          TextBlock.Foreground="{StaticResource Color_Black}"/>
                                                    
                                                        <Image Grid.Column="2" x:Name="Expander" Source="{StaticResource Img_Post_ArrowDown}" Visibility="Collapsed" 
                                                           Width="18" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                        <Button Grid.Column="0" Grid.ColumnSpan="3" Content="접속" Click="{local:MethodBinding OnChatRoomEnter}" 
                                                                Width="60" Height="30"
                                                                HorizontalAlignment="Right" Margin="0,0,40,0"/>
                                                    </Grid>
                                                </Border>
                                                <ItemsPresenter x:Name="Child" Margin="10,0,0,0" Visibility="Collapsed"/>
                                            </StackPanel>

                                            <ControlTemplate.Triggers>

                                                <!-- 자식 요소가 있으면 하위식별 표시 -->
                                                <Trigger Property="HasItems" Value="True">
                                                    <Setter TargetName="Expander" Property="Visibility" Value="Visible"/>
                                                </Trigger>

                                                <!-- 자식 요소를 펼치기 -->
                                                <Trigger Property="IsExpanded" Value="True">
                                                    <Setter TargetName="Expander" Property="Source" Value="{StaticResource Img_Post_ArrowUp}"/>
                                                    <Setter TargetName="Child" Property="Visibility" Value="Visible"/>
                                                </Trigger>

                                                <!-- 선택 -->
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Parent" Property="Background" Value="{StaticResource Color_ThinGray}"/>
                                                    <Setter TargetName="Btn_Text"  Property="TextBlock.Foreground" Value="{StaticResource Color_Yellow}"/>
                                                    <Setter TargetName="Btn_Text"  Property="TextBlock.FontWeight" Value="Bold"/>
                                                </Trigger>

                                                <!-- 마우스 -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Parent" Property="Background" Value="{StaticResource Color_Gray}"/>
                                                    <Setter TargetName="Btn_Text"  Property="TextBlock.Foreground" Value="{StaticResource Color_White}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </Grid>
            </Border>

            <!-- 채팅방 -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="0,0.5,0.5,0.5"
                    DataContext="{Binding ChatRoomLive}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="160"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,0.5">
                        
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" Margin="0.5">
                        <ItemsControl ItemsSource="{Binding Messages}" Margin="0,20,0,20">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                                        <TextBlock Text="{Binding Created_At, StringFormat={}{0:HH:mm}}" VerticalAlignment="Bottom" Margin="0,0,0,10"
                                                        Foreground="Gray"/>
                                        <Border Background="Yellow" CornerRadius="8"
                                                    MaxWidth="200"
                                                    Padding="10"
                                                    HorizontalAlignment="Right" Margin="8,0,10,10">
                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
                                        </Border>
                                        <TextBlock Text="{Binding Employee_Name}"/>
                                        <!--<Ellipse Width="40" Height="40" Fill="LightPink"
                                                        VerticalAlignment="Top" Margin="0,0,10,0">
                                            </Ellipse>-->
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="0,0.5,0,0">
                        <Grid>
                            <TextBox TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding SendMessage}" 
                                     HorizontalAlignment="Stretch" VerticalAlignment="Bottom" 
                                     Height="80"
                                     Margin="20,0,120,20"/>
                            <Button Content="보내기" Click="{local:MethodBinding OnMessageSend}" 
                                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                    Width="80" Height="30" Margin="0,0,20,70"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
