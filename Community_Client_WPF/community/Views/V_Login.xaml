<UserControl x:Class="community.Views.V_Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:community.Views"
             xmlns:u="clr-namespace:community.View_Controls"
             mc:Ignorable="d" 
             d:DesignWidth="1600" d:DesignHeight="870"
             Background="{StaticResource Gray}" Opacity="1">

    <Border Width="400" Height="600" Background="{StaticResource View_Background}" Padding="40,40,40,0" CornerRadius="4">
        <StackPanel Orientation="Vertical" Width="320" Height="560">
            <!-- Logo -->
            <Grid Width="320" Height="160" Margin="0,0,0,20">
                <Image Source="..\Images\image_login.png" Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Top"
                       Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant"/>

                <TextBlock Text="커뮤니티 로그인" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            </Grid>

            <!-- Username Text -->
            <TextBlock Width="320" Text="아이디" Height="20"/>
            <TextBox Width="320" Height="36" VerticalAlignment="Top" Template="{StaticResource Icon_TextBox}" Tag="{StaticResource Img_Username}"
                     Text="{Binding LoginUser.Login_Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="아이디" Margin="0,0,0,10"/>

            <!-- Password Text -->
            <TextBlock Width="320" Text="비밀번호" Height="20"/>
            <PasswordBox Width="320" Height="36" VerticalAlignment="Top" Template="{StaticResource Icon_PasswordBox}" Tag="{StaticResource Img_Password}"
                         u:PasswordBoxHelper.Attach="True"
                         u:PasswordBoxHelper.Password="{Binding LoginUser.Login_Pw, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="비밀번호" Margin="0,0,0,10"/>

            <!--<CheckBox Content="자동 로그인" IsChecked="True"  Margin="0,0,0,0"/>-->

            <!-- Login Button -->
            <Button Content="로그인" Width="320" Height="36" TextBlock.FontWeight="Bold" Template="{StaticResource Borderless_TextButton}" Tag="0" Click="{local:MethodBinding OnLogin}" Margin="0,20,0,6"/>
            <Button Content="회원가입" Width="320" Height="36" TextBlock.FontWeight="Bold" Template="{StaticResource Borderless_TextButton}" Tag="" Click="{local:MethodBinding OnSignUp}" Margin="0,0,0,6"/>

            <!--<StackPanel Orientation="Horizontal">
                <Button Content="아이디 찾기" Width="160" Height="36" TextBlock.FontWeight="Bold" Template="{StaticResource Borderless_TextButton}" Tag="3" Click="{local:MethodBinding OnForgotUsername}" Margin="0,0,0,0"/>
                <Button Content="비밀번호 찾기" Width="160" Height="36" TextBlock.FontWeight="Bold" Template="{StaticResource Borderless_TextButton}" Tag="3" Click="{local:MethodBinding OnForgotPassword}" Margin="0,0,0,0"/>
            </StackPanel>-->

            <!--<Button Content="카카오톡 계정으로 로그인" Width="320" Height="36" TextBlock.FontWeight="Bold" Template="{StaticResource Borderless_TextButton}" Tag="2" Click="{local:MethodBinding OnLogin_Kakao}" Margin="0,20,0,10"/>-->
        </StackPanel>
    </Border>
</UserControl>
