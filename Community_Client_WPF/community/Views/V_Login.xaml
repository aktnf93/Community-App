<UserControl x:Class="community.Views.V_Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:community.Views"
             xmlns:c="clr-namespace:community.Common"
             mc:Ignorable="d" 
             Width="400" Height="600">
    <Grid Background="White">
        <Label Content="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,30,0,0"/>

        <Label Content="Username:" Margin="50,100,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameTextBox" Text="{Binding Login_Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="30" Margin="50,130,50,0" VerticalAlignment="Top"/>
        
        <Label Content="Password:" Margin="50,180,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" Width="300" Height="30" Margin="50,210,50,0" VerticalAlignment="Top"
                     c:PasswordBoxHelper.Attach="True"
                     c:PasswordBoxHelper.Password="{Binding Login_Pw, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     />
        
        <Button Content="Login" Width="100" Height="30" Margin="150,270,150,0" VerticalAlignment="Top" 
                Click="{c:MethodBinding OnLogin}"
                Background="#007ACC" Foreground="White"/>
        
        <TextBlock HorizontalAlignment="Center" Margin="0,320,0,0" VerticalAlignment="Top">
            <Run Text="Don't have an account? "/>
            <Hyperlink NavigateUri="#" Foreground="#007ACC">Sign Up</Hyperlink>
        </TextBlock>
    </Grid>
</UserControl>
