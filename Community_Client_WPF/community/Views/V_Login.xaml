<UserControl x:Class="community.Views.V_Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:community.Views"
             xmlns:vm="clr-namespace:community.ViewModels"
             xmlns:u="clr-namespace:community.View_Controls"
             mc:Ignorable="d" 
             d:DesignWidth="1600" d:DesignHeight="870"
             Width="1600" Height="870"
             Background="{StaticResource Color_Gray}" Opacity="1">

    <Grid>
        
        <!-- 로그인 -->
        <Border Visibility="Visible" Width="400" Height="600" Background="{StaticResource Color_White}" Padding="40,40,40,0" CornerRadius="4">
            <StackPanel Orientation="Vertical" Width="320" Height="560">
                <!-- Logo -->
                <Grid Width="320" Height="160" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                        
                        <Image Source="{StaticResource Img_Window_Logo2}" Width="76" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant"/>
                        <TextBlock FontSize="20" FontWeight="Bold" Foreground="#202020" Margin="10,0,0,0" VerticalAlignment="Center"
                                   FontFamily="Arial Rounded MT Bold">
                            <Run Text="SH"/>
                            <LineBreak/>
                            <Run Text="ELECTRONIC"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <TextBlock Text="그룹웨어 로그인" 
                               Foreground="#4A4A4A"
                               FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>

                <!-- Username Text -->
                <TextBlock Width="320" Text="아이디" Height="20"/>
                <TextBox Width="320" Height="36" VerticalAlignment="Top" Template="{StaticResource Icon_TextBox}" Tag="{StaticResource Img_Login_ID}"
                         Text="{Binding LoginUser.Login_Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="아이디" Margin="0,0,0,10"/>

                <!-- Password Text -->
                <TextBlock Width="320" Text="비밀번호" Height="20"/>
                <PasswordBox Width="320" Height="36" VerticalAlignment="Top" Template="{StaticResource Icon_PasswordBox}" Tag="{StaticResource Img_Login_PW}"
                             u:PasswordBoxHelper.Attach="True"
                             u:PasswordBoxHelper.Password="{Binding LoginUser.Login_Pw, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="비밀번호" Margin="0,0,0,10"/>

                <!-- Login Button -->
                <Button Content="로그인"   Width="320" Height="36" TextBlock.FontWeight="Bold" Click="{local:MethodBinding OnLogin}"  Margin="0,20,0,6"/>
                <Button Content="회원가입" Width="320" Height="36" TextBlock.FontWeight="Bold" Click="{local:MethodBinding OnSignUp}" Margin="0,0,0,6"/>
            </StackPanel>
        </Border>


        <!-- 회원가입 SignupVisibility -->
        <Border Visibility="{Binding SignupVisibility}" Width="400" Height="600" Background="{StaticResource Color_White}" Padding="40,40,40,0" CornerRadius="4">
            <StackPanel Orientation="Vertical" Width="320" Height="560">
                <!-- Logo -->
                <Image Source="/Images/Login/add_user_128px.png" Width="60" Height="60" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant"/>
                <TextBlock Text="회원가입" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,4"/>
                <TextBlock Text="새 계정을 만들어 서비스를 시작하세요" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>

                <!-- Username Text -->
                <TextBlock Width="320" Text="아이디" Height="20"/>
                <TextBox Width="320" Height="36" VerticalAlignment="Top" Template="{StaticResource Icon_TextBox}" Tag="{StaticResource Img_Login_ID}"
                         Text="{Binding SignupUser.Login_Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="아이디" Margin="0,0,0,10"/>

                <!-- Password Text -->
                <TextBlock Width="320" Text="비밀번호" Height="20"/>
                <PasswordBox Width="320" Height="36" VerticalAlignment="Top" Template="{StaticResource Icon_PasswordBox}" Tag="{StaticResource Img_Login_PW}"
                             u:PasswordBoxHelper.Attach="True"
                             u:PasswordBoxHelper.Password="{Binding SignupUser.Login_Pw, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="비밀번호" Margin="0,0,0,10"/>
                <TextBlock Width="320" Text="비밀번호 확인" Height="20"/>
                <PasswordBox Width="320" Height="36" VerticalAlignment="Top" Template="{StaticResource Icon_PasswordBox}" Tag="{StaticResource Img_Login_PW}"
                             u:PasswordBoxHelper.Attach="True"
                             u:PasswordBoxHelper.Password="{Binding SignupUser.Login_Pw_Check, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="비밀번호 확인" Margin="0,0,0,10"/>

                <TextBlock Width="320" Text="이름" Height="20"/>
                <TextBox Width="320" Height="36" VerticalAlignment="Top" Template="{StaticResource Icon_TextBox}"
                         Text="{Binding SignupUser.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="이름" Margin="0,0,0,40"/>

                <!-- Login Button -->
                <Button Content="회원가입" Width="320" Height="36" TextBlock.FontWeight="Bold" Click="{local:MethodBinding OnSignUpCommit}"/>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
