            <StackPanel>
                <Grid Height="80">
                    <Image HorizontalAlignment="Center" VerticalAlignment="Center"
                           Width="60" Height="60"
                           Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant"/>

                    <TextBlock FontSize="16" VerticalAlignment="Bottom" Margin="20,0,0,0">
                        <Run Text="{Binding Login_User.Id}"/>
                        <Run Text=":"/>
                        <Run Text="{Binding Login_User.Nickname}"/>
                    </TextBlock>
                </Grid>
                <RadioButton Content="게시판"   Template="{StaticResource MenuButton}" IsChecked="{Binding MenuSelected, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Board}"/>
                <RadioButton Content="메시지"   Template="{StaticResource MenuButton}" IsChecked="{Binding MenuSelected, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Messages}"/>
                <RadioButton Content="채팅방"   Template="{StaticResource MenuButton}" IsChecked="{Binding MenuSelected, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Chat}"/>
                <RadioButton Content="프로젝트" Template="{StaticResource MenuButton}" IsChecked="{Binding MenuSelected, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Project}"/>
                <RadioButton Content="고객괸리" Template="{StaticResource MenuButton}" IsChecked="{Binding MenuSelected, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Customer}"/>
                <RadioButton Content="직원관리" Template="{StaticResource MenuButton}" IsChecked="{Binding MenuSelected, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Employee}"/>
                <RadioButton Content="재고관리" Template="{StaticResource MenuButton}" IsChecked="{Binding MenuSelected, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Inventory}"/>
                <RadioButton Content="환경설정" Template="{StaticResource MenuButton}" IsChecked="{Binding MenuSelected, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Settings}"/>
            </StackPanel>
        </Border>
            
        <!-- 메뉴 화면 -->
        <ScrollViewer Grid.Column="1" Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <local:ViewCacheHost Content="{Binding CurrentViewModel}"/>
        </ScrollViewer>

        <!-- 로그인 -->
        <local:V_Login Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" DataContext="{Binding VM_Login}" Visibility="{Binding DisplayShow}"/>
    </Grid>
</Window>
