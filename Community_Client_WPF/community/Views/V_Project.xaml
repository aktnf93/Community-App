<UserControl x:Class="community.Views.V_Project"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:community.Views"
             xmlns:m="clr-namespace:community.Models"
             xmlns:u="clr-namespace:community.View_Controls"
             mc:Ignorable="d" 
             d:DesignWidth="1460" d:DesignHeight="850"
             Loaded="{local:MethodBinding Loaded}">
    <Grid Background="{StaticResource View_Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 카드 -->
        <ItemsControl Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Background="#2C3E50"
                      Height="240" HorizontalAlignment="Left" Margin="25,0,25,0"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      >
            <ItemsControl.Template>
                <ControlTemplate TargetType="{x:Type ItemsControl}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10">
                            <Run Text="안녕하세요, 사용자님!" FontSize="24" FontWeight="Bold"/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text=" 프로젝트 관리 시스템에 오신 것을 환영합니다." FontSize="16" FontWeight="Normal"/>
                        </TextBlock>
                        
                        <ItemsPresenter Grid.Row="1"/>
                    </Grid>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>

                    <Border Background="{Binding Color}" Width="190" Height="110" Margin="0,0,10,0"
                            CornerRadius="8">
                        <Grid>
                            <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
                            
                            <TextBlock Text="{Binding Status}" FontSize="24" FontWeight="Bold"
                                       HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
                            
                            <TextBlock Text="{Binding Description}" FontSize="12"
                                       HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20"/>
                            
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <ItemsControl.ItemsSource>
                <x:Array Type="{x:Type m:M_Card}">
                    <m:M_Card Title="총 프로젝트" Status="25" Description="5개 활성, 20개 완료" Color="#F3F6FC"/>
                    <m:M_Card Title="활성 태스크" Status="128" Description="15개 기한 초과" Color="#E6FFFB"/>
                    <m:M_Card Title="다가오는 마감일" Status="7" Description="다음 7일 이내" Color="#F3F6FC"/>
                    <m:M_Card Title="팀 활용도" Status="85%" Description="지난달 평균" Color="#E6FFFB"/>
                </x:Array>
            </ItemsControl.ItemsSource>
        </ItemsControl>

        <!-- 프로젝트 리스트 -->
        <ItemsControl Grid.Column="0" Grid.Row="1" Background="#2C3E50" Margin="25,0,25,0"
                      HorizontalAlignment="Left"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      >
            <ItemsControl.Template>
                <ControlTemplate TargetType="{x:Type ItemsControl}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Project List" FontSize="20" FontWeight="Bold" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"
                                   />

                        <Button Grid.Row="0" Content="Add Project" 
                                Width="100" Height="30" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Center"
                                Template="{StaticResource Borderless_TextButton}" Tag="0"/>

                        <Grid Grid.Row="1" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" x:Name="column_project"/>
                                <ColumnDefinition Width="120" x:Name="column_status"/>
                                <ColumnDefinition Width="150" x:Name="column_progress"/>
                                <ColumnDefinition Width="120" x:Name="column_end_date"/>
                                <ColumnDefinition Width="30" x:Name="column_pm"/>
                                <ColumnDefinition Width="64" x:Name="column_v_button"/>
                                <ColumnDefinition Width="64" x:Name="column_e_button"/>
                                <ColumnDefinition Width="64" x:Name="column_d_button"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="프로젝트명"               FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                            <TextBlock Grid.Column="1" Text="상태"                     FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                            <TextBlock Grid.Column="2" Text="진행률"                   FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                            <TextBlock Grid.Column="3" Text="종료일"                   FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                            <TextBlock Grid.Column="4" Text="PM"                      FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                            <TextBlock Grid.Column="5" Grid.ColumnSpan="3" Text="보기" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                        </Grid>

                        <ScrollViewer Grid.Row="2" 
                                      HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border>
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightBlue"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        
                        <Grid MinHeight="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" x:Name="column_project"/>
                                <ColumnDefinition Width="120" x:Name="column_status"/>
                                <ColumnDefinition Width="150" x:Name="column_progress"/>
                                <ColumnDefinition Width="120" x:Name="column_end_date"/>
                                <ColumnDefinition Width="30" x:Name="column_pm"/>
                                <ColumnDefinition Width="64" x:Name="column_v_button"/>
                                <ColumnDefinition Width="64" x:Name="column_e_button"/>
                                <ColumnDefinition Width="64" x:Name="column_d_button"/>
                            </Grid.ColumnDefinitions>

                            <Line Grid.ColumnSpan="8" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="Gray" StrokeThickness="1" VerticalAlignment="Top"/>

                            <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="WrapWithOverflow"
                                       Margin="6"/>
                            <TextBlock Grid.Column="1" Text="{Binding Status}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <u:U_LinePoint_ProgressBar Grid.Column="2" Style="{StaticResource LinePoint_ProgressBar}"
                                                       Width="100" Height="20" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                                                       Minimum="0" Maximum="100" Value="{Binding Progress}" 
                                                       />
                            <TextBlock Grid.Column="2" Text="{Binding Progress, StringFormat={}{0}%}" FontSize="12" Margin="114,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>


                            <TextBlock Grid.Column="3" Text="{Binding EndDate, StringFormat={}{0:yyyy-MM-dd}}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="{Binding OwnerId}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Grid.Column="5" Content="View"   Width="60" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Template="{StaticResource Borderless_TextButton}" Tag="0"/>
                            <Button Grid.Column="6" Content="Edit"   Width="60" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Template="{StaticResource Borderless_TextButton}"/>
                            <Button Grid.Column="7" Content="Delete" Width="60" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Template="{StaticResource Borderless_TextButton}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <ItemsControl.ItemsSource>
                <x:Array Type="{x:Type m:M_Project}">
                    <m:M_Project Name="웹사이트 개설" Status="In Progress" Progress="75" EndDate="2024-12-31" OwnerId="1" OwnerName="김민준"/>
                    <m:M_Project Name="모바일 앱 개발" Status="Pending" Progress="10" EndDate="2025-03-15" OwnerId="1" OwnerName="박서준"/>
                    <m:M_Project Name="데이터베이스 최적화" Status="Completed" Progress="100" EndDate="2024-10-20" OwnerId="1" OwnerName="이지은"/>
                    <m:M_Project Name="마케팅 캠폐인 계획" Status="On Hold" Progress="30" EndDate="2024-11-01" OwnerId="1" OwnerName="최유리"/>
                    <m:M_Project Name="내부 도구 업그레이드" Status="In Progress" Progress="50" EndDate="2025-01-30" OwnerId="1" OwnerName="강하준"/>
                </x:Array>
            </ItemsControl.ItemsSource>

        </ItemsControl>

        <!-- 최근 활동 -->
        <ItemsControl Grid.Column="1" Grid.Row="1" Background="#2C3E50" Margin="0,0,0,0"
                      Width="320" HorizontalAlignment="Left"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      >
            <ItemsControl.Template>
                <ControlTemplate TargetType="{x:Type ItemsControl}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="최근 활동" FontSize="20" FontWeight="Bold" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                        <ScrollViewer Grid.Row="1" 
                                      CanContentScroll="True"
                                      HorizontalScrollBarVisibility="Disabled" 
                                      VerticalScrollBarVisibility="Visible">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </ItemsControl.Template>
            
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="280" CornerRadius="5" Margin="0" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="24"/>
                            </Grid.RowDefinitions>
                            
                            <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Width="20" Height="20" 
                                   Source="{Binding Icon}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            
                            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Title}" FontSize="14" TextWrapping="WrapWithOverflow"/>
                            
                            <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Description}" FontSize="12" Foreground="Gray" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0"/>
                            
                            <Line Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="LightGray" StrokeThickness="1" 
                                    VerticalAlignment="Bottom"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            
            <ItemsControl.ItemsSource>
                <x:Array Type="{x:Type m:M_Card}">
                    <m:M_Card Title="김민준님이 프로젝트 &quot;웹사이트 재설계&quot;에 새 태스크 &quot;랜딩 페이지 디자인&quot;을 추가했습니다." Description="3분 전" Icon="..\Resource_Icon\plus.png"/>
                    <m:M_Card Title="박서준님이 프로젝트 &quot;모바일 앱 개발&quot;의 상태를 업데이트 했습니다." Description="15분 전" Icon="..\Resource_Icon\edit.png"/>
                    <m:M_Card Title="이지은님이 '데이터베이스 최적화' 프로젝트를 완료했습니다." Description="1시간 전" Icon="..\Resource_Icon\ok.png"/>
                    <m:M_Card Title="최유리님이 '마케팅 캠폐인 계획' 프로젝트에 새로운 태스크를 추가했습니다." Description="2시간 전" Icon="..\Resource_Icon\plus.png"/>
                    <m:M_Card Title="강하준님이 '내부 도구 업그레이드' 프로젝트의 마감일을 연장했습니다." Description="알 수 없음" Icon="..\Resource_Icon\info.png"/>
                </x:Array>
            </ItemsControl.ItemsSource>
        </ItemsControl>

        <!-- 팀원 소개 -->
        <ItemsControl Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" 
                      HorizontalAlignment="Left" Margin="25,0,25,25"
                      
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      >
            
            <ItemsControl.Template>
                <ControlTemplate TargetType="{x:Type ItemsControl}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <ItemsPresenter Grid.Row="0"/>
                    </Grid>
                </ControlTemplate>
            </ItemsControl.Template>
            
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="0.5" CornerRadius="8"
                            Padding="10" Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Width="60" Height="60">
                                
                                <Image Source="{Binding Icon}" Stretch="UniformToFill"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image.Clip>
                                        <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30"/>
                                    </Image.Clip>
                                </Image>

                                <Ellipse Width="16" Height="16" Stroke="White" StrokeThickness="1"
                                         Fill="Green"
                                         HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                         Margin="0,0,0,0"/>
                            </Grid>

                            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Title}" FontSize="16" FontWeight="Bold" 
                                       HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,0"/>

                            <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Description}" FontSize="12" Foreground="DimGray"
                                       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            
            <ItemsControl.ItemsSource>
                <x:Array Type="{x:Type m:M_Card}">
                    <m:M_Card Title="이수진" Description="프로젝트 매니저" Icon="..\Resource_Icon\employee_man.png"/>
                    <m:M_Card Title="정우성" Description="프론트엔드 개발자" Icon="..\Resource_Icon\employee_man_head.png"/>
                    <m:M_Card Title="한지민" Description="백엔드 개발자" Icon="..\Resource_Icon\employee_woman_head.png"/>
                    <m:M_Card Title="서영호" Description="UX/UI 디자이너" Icon="..\Resource_Icon\employee_man_head.png"/>
                </x:Array>
            </ItemsControl.ItemsSource>
        </ItemsControl>
    </Grid>
</UserControl>
